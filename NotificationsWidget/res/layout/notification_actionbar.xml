<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationActionbar"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:layout_weight="0"
    android:orientation="horizontal" >
	
	    <ImageButton
	        android:id="@+id/clearNotification"
	        style="@android:style/Holo.ButtonBar"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/item_selector"
	        android:src="@drawable/item_selector" />

	    <Button
	        android:id="@+id/appOptions"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:background="@drawable/item_selector"
	        android:drawableLeft="@android:drawable/ic_menu_preferences"
	        android:drawablePadding="4dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/settings"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <Button
	        android:id="@+id/pinNotification"
	        style="android:buttonStyle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:background="@drawable/item_selector"
	        android:drawableLeft="@drawable/pin"
	        android:gravity="left|center_vertical"
	        android:text="@string/pin"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <Button
	        android:id="@+id/ClearNotification"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_selector"
	        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
	        android:gravity="left|center_vertical"
	        android:text="@string/clear"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	</LinearLayout>
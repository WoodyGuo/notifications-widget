<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationActionbar"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:layout_weight="0"
    android:orientation="horizontal" >

	    <ImageButton
	        android:id="@+id/customAction1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_selector"
	        android:src="@android:drawable/ic_menu_close_clear_cancel" 
	        />
    
	    <ImageButton
	        android:id="@+id/customAction2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_selector"
	        android:src="@android:drawable/ic_menu_close_clear_cancel" 
	        />
	    
	    <Button
	        android:id="@+id/actionSettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:background="@drawable/item_selector"
	        android:drawableLeft="@android:drawable/ic_menu_preferences"
	        android:drawablePadding="4dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/settings"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <Button
	        android:id="@+id/actionPin"
	        style="android:buttonStyle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:background="@drawable/item_selector"
	        android:drawableLeft="@drawable/pin"
	        android:gravity="left|center_vertical"
	        android:text="@string/pin"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <ImageButton
	        android:id="@+id/actionClear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_selector"
	        android:src="@android:drawable/ic_menu_close_clear_cancel" />

	</LinearLayout>
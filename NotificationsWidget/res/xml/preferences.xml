<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:key="behavior" android:title="@string/behavior">
            <CheckBoxPreference 
                android:title="@string/turnscreenon" 
                android:key="turnscreenon" 
                android:enabled="true" 
                android:defaultValue="true" 
                android:summary="@string/turnscreenon_summary"/>            
            <CheckBoxPreference 
                android:title="@string/disableproximity" 
                android:key="disableproximity" 
                android:enabled="true" 
                android:defaultValue="false" 
                android:disableDependentsState="true"
                android:summary="@string/disableproximity_summary"
                android:dependency="turnscreenon"/>
            <CheckBoxPreference 
                android:title="@string/delayed_screenon"
                android:key="delayed_screenon"
                android:enabled="true"
                android:defaultValue="false"
                android:summary="@string/delayed_screenon_summary"
                android:dependency="disableproximity"/>"                
    </PreferenceCategory>             
    <PreferenceCategory android:key="notifications" android:title="@string/notifications">
            <CheckBoxPreference 
                android:title="@string/clearonunlock" 
                android:key="clearonunlock" 
                android:enabled="true" 
                android:defaultValue="false" 
                android:summary="@string/clearonunlock_summary"/>
            <!-- <CheckBoxPreference 
                android:title="@string/clearonlock" 
                android:key="clearonlock" 
                android:enabled="true" 
                android:defaultValue="false" 
                android:summary="@string/clearonlock_summary"/> -->
            <CheckBoxPreference 
                android:title="@string/collectonunlock" 
                android:key="collectonunlock" 
                android:enabled="true" 
                android:defaultValue="true" 
                android:summary="@string/collectonunlock_summary"/>        
            <ListPreference android:dialogTitle="@string/order_notifications_by" 
    	    			android:entries="@array/settings_orderby_entries" 
    	    			android:entryValues="@array/settings_orderby_values" 
    	    			android:title="@string/order_notifications_by" 
    	    			android:key="order_notifications_by" 
    	    			android:defaultValue="time" />      
            </PreferenceCategory>    
</PreferenceScreen>
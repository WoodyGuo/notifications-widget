<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:key="behavior" android:title="@string/behavior">
            <CheckBoxPreference 
                android:title="@string/turnscreenon" 
                android:key="turnscreenon" 
                android:enabled="true" 
                android:defaultValue="true" 
                android:summary="@string/turnscreenon_summary"/>
    </PreferenceCategory>
    <PreferenceCategory android:key="appearance" android:title="@string/appearance">
        <CheckBoxPreference 
            android:summary="@string/showclock_summary" 
            android:key="showclock"
            android:defaultValue="true"  
            android:title="@string/showclock"/>
    	<CheckBoxPreference 
    	    android:summary="@string/showclearbutton_summary" 
    	    android:key="showclearbutton" 
    	    android:title="@string/showclearbutton" 
    	    android:defaultValue="true" 
    	    android:dependency="showclock"/>  
    	<com.hlidskialf.android.preference.SeekBarPreference android:key="notification_bg_opacity"
	        android:title="@string/notification_bg_opacity"
	        android:summary="@string/notification_bg_opacity_summary"
	        android:dialogMessage=""
	        android:defaultValue="75"
	        android:text="%"
	        android:max="100"/>
    	<ListPreference android:dialogTitle="@string/notification_text_color" android:entries="@array/settings_colors_entries" android:entryValues="@array/settings_colors_values" android:title="@string/notification_text_color" android:key="notification_text_color" android:defaultValue="17170443"/>
    	<ListPreference android:title="@string/notification_time_color" android:dialogTitle="@string/notification_time_color" android:entries="@array/settings_colors_entries" android:key="notification_time_color" android:entryValues="@array/settings_colors_values" android:defaultValue="17170451"/>	
    </PreferenceCategory>
</PreferenceScreen>